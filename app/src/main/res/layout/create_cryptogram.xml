<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
xmlns:tools = "http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height = "match_parent">

<TextView android:text = "Create Cryptogram" android:layout_width="wrap_content"
    android:layout_height = "wrap_content"
    android:id = "@+id/create_cryptogram_label"
    android:textSize = "35dp"
    android:layout_alignParentTop = "true"
    android:layout_centerHorizontal = "true"
    android:layout_marginTop="50dp"/>


<EditText
    android:id="@+id/cryptogram"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/create_cryptogram_label"
    android:layout_alignParentStart="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    android:layout_marginStart="0dp"
    android:layout_marginLeft="0dp"
    android:layout_marginTop="70dp"
    android:layout_marginEnd="0dp"
    android:layout_marginRight="0dp"
    android:focusable="true"
    android:hint="Enter Cryptogram"
    android:maxLength="10"
    android:textColorHighlight="#696969"
    android:textColorHint="#696969" />


<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:ems="10"
    android:id="@+id/cryptoSolution"
    android:layout_below="@+id/cryptogram"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignRight="@+id/cryptogram"
    android:layout_alignEnd="@+id/cryptogram"
    android:textColorHint="#696969"
    android:maxLength="50"
    android:hint="Enter the Solution" />

    <EditText
        android:id="@+id/easyAttempts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cryptoSolution"
        android:layout_alignEnd="@+id/cryptoSolution"
        android:layout_alignRight="@+id/cryptoSolution"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:ems="10"
        android:hint="Easy Attempts"
        android:inputType="number"
        android:maxLength="10"
        android:textColorHint="#696969" />

    <EditText
        android:id="@+id/normalAttempts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/easyAttempts"
        android:layout_alignEnd="@+id/easyAttempts"
        android:layout_alignRight="@+id/easyAttempts"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:ems="10"
        android:hint="Normal Attempts"
        android:inputType="number"
        android:maxLength="10"
        android:textColorHint="#696969" />

    <EditText
        android:id="@+id/hardAttempts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/normalAttempts"
        android:layout_alignEnd="@+id/normalAttempts"
        android:layout_alignRight="@+id/normalAttempts"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:ems="10"
        android:hint="Hard Attempts"
        android:inputType="number"
        android:maxLength="10"
        android:textColorHint="#696969" />


    <Button
        android:id="@+id/create_cryptogram_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-223dp"
        android:layout_marginRight="-223dp"
        android:layout_marginBottom="132dp"
        android:layout_toStartOf="@+id/create_cryptogram_label"
        android:layout_toLeftOf="@+id/create_cryptogram_label"
        android:text="Create Cryptogram" />

    <Button
        android:id="@+id/Cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-180dp"
        android:layout_marginRight="-180dp"
        android:layout_marginBottom="57dp"
        android:layout_toStartOf="@+id/create_cryptogram_label"
        android:layout_toLeftOf="@+id/create_cryptogram_label"
        android:text="Cancel" />


</RelativeLayout>



